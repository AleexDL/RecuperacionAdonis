    <title>Editar</title>
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    
</head>
<body>
    <div>
        <nav class="nnavbar navbar-expand-lg navbar-light bg-light">
            
            <a class="navbar-brand" href="//127.0.0.1:3333/cliente">
                <img src="https://image.flaticon.com/icons/svg/265/265674.svg" width="30" height="30" class="d-inline-block align-top" alt=" ">
                Clientes
            </a>
            <a class="navbar-brand" href="//127.0.0.1:3333/vehiculo">
                <img src="https://image.flaticon.com/icons/svg/741/741407.svg" width="30" height="30" class="d-inline-block align-top" alt=" ">
                vehiculos
            </a>
            <a class="navbar-brand" href="//127.0.0.1:3333/mecanico">
                <img src="https://image.flaticon.com/icons/svg/81/81836.svg" width="30" height="30" class="d-inline-block align-top" alt=" ">
                Mecanicos
            </a>
            <a class="navbar-brand" href="//127.0.0.1:3333/factura">
                <img src="https://image.flaticon.com/icons/svg/1611/1611154.svg" width="30" height="30" class="d-inline-block align-top" alt=" ">
                Facturas
            </a>
            <a class="navbar-brand" href="//127.0.0.1:3333/hoja">
                <img src="https://image.flaticon.com/icons/svg/1696/1696695.svg" width="30" height="30" class="d-inline-block align-top" alt=" ">
                HojaDePartes
            </a>
            <a class="navbar-brand" href="//127.0.0.1:3333/repuesto">
                <img src="https://image.flaticon.com/icons/svg/148/148912.svg" width="30" height="30" class="d-inline-block align-top" alt=" ">
                Repuestos
            </a>
            <a class="navbar-brand" href="//127.0.0.1:3333/registro">
                <img src="https://image.flaticon.com/icons/svg/1696/1696695.svg" width="30" height="30" class="d-inline-block align-top" alt=" ">
                Registro
            </a>
            
        </nav>
    </div>
    <div class="container">
        <form action="/repuesto/editar/{{repuesto.id}}" method="POST">
            <div class="form-group">
            <label for="formAlumno">idrepuesto</label>
            <input type="text" class="form-control" id="id" value="{{repuesto.id}}" name="id" disabled>
            </div>

            <div class="form-group">
            <label for="formAlumno">descripcion</label>
            <input type="text" class="form-control" id="descripcion" value="{{repuesto.descripcion}}" name="descripcion">
            </div>
    
        
            <div class="form-group">
            <label for="formAlumno">costo Unit</label>
            <input type="text" class="form-control" id="costUnit" value="{{repuesto.costUnit}}" name="costUnit">
            </div>
            <div class="form-group">
                    <label for="formAlumno">precio Unit</label>
                    <input type="text" class="form-control" id="precioUnt" value="{{repuesto.precioUnt}}" name="precioUnt">
                    </div>

            <div class="form-group">
                        <label for="formAlumno">imp Parcial</label>
                        <input type="text" class="form-control" id="impParcial" value="{{repuesto.impParcial}}" name="impParcial">
                 </div>
                 
                <div class="form-group">
                    <label for="formAlumno">idHoja</label>
                    <select name="HojaDeParte">
                        @each( hoja in hojas)
                            <option value="{{hoja.id}}">{{hoja.idHoja}}</option>
                        @endeach
                    </select>
                </div>
                <div class="form-group">
                    <label for="formAlumno">idMecanico</label>
                    <select name="HojaDeParteMecanicoResponsable">
                        @each( hoja in hojas)
                            <option value="{{hoja.idMecanicoResponsable}}">{{hoja.idMecanicoResponsable}}</option>
                        @endeach
                    </select>
                </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Editar</button>
            </div>
        </form>
    </div>
</body>
</html>