    <div class="container">
        <form action="/mecanico/editar/{{mecanico.id}}" method="POST">
            <div class="form-group">
            <label for="formAlumno">idMecanico</label>
            <input type="number" class="form-control" id="nombre" value="{{mecanico.idMecanico}}" name="idMecanico" disabled>
            </div>

            <div class="form-group">
            <label for="formAlumno">Nombre del mecanico</label>
            <input type="text" class="form-control" id="nombre" value="{{mecanico.nombre}}" name="nombre">
            </div>
    
        
            <div class="form-group">
            <label for="formAlumno">direccion</label>
            <input type="text" class="form-control" id="direccion" value="{{mecanico.direccion}}" name="direccion">
            </div>
        
            <div class="form-group">
            <label for="formAlumno">telefono</label>
            <input type="text" class="form-control" id="telefono" value="{{mecanico.telefono}}" name="telefono">
            </div>

            <div class="form-group">
                <label for="formAlumno">costo*hora</label>
                <input type="text" class="form-control" id="costoxhora" value="{{mecanico.costoxhora}}" name="costoxhora">
            </div>

            <div class="form-group">
                <label for="formAlumno">categoria</label>
                <input type="text" class="form-control" id="categoria" value="{{mecanico.categoria}}" name="categoria">
                </div>
                
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Editar</button>
            </div>
        </form>
